

#include "stdio.h"


int one()
{

	float mat1[2][2];
	float mat2[2][2];
	float sum[2][2];



		printf("Enter all the elements of 1st matrix");
			fflush(stdin);fflush(stdout);

			for(int i = 0;i<2;i++)
			{
				for(int j=0; j<2;j++)
				{
					printf("Enter a%d%d\n:" , i+1 , j+1);
					fflush(stdin);fflush(stdout);
					scanf("%f", &mat1[i][j] );

				}

			}

			printf("Enter all the elements of 2nd matrix\n");
						fflush(stdin);fflush(stdout);

						for(int i = 0;i<2;i++)
						{
							for(int j=0; j<2;j++)
							{
								printf("Enter a%d%d\n:" ,i+1 , j+1);
								fflush(stdin);fflush(stdout);
								scanf("%f", &mat2[i][j] );

							}

						}

		printf("Sum of matrix:");


			for(int i = 0;i<2;i++)
			{
			  for(int j=0; j<2;j++)
				{
				  sum[i][j] = mat1[i][j] + mat2[i][j];


				}

			}

			for(int i = 0;i<2;i++)
					{
					  for(int j=0; j<2;j++)
						{

						  printf("%f\t" , sum[i][j] );

						}

					}












}

